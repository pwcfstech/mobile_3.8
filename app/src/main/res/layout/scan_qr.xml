<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/scan_qr_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:textSize="15sp"
        android:background="@color/popupBtn_pink"
        android:textColor="@color/white"
        android:visibility="gone"
        android:text="@string/invalid_QR"
        android:id="@+id/scanErrorTextview" />


    <SurfaceView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:visibility="gone"
        android:id="@+id/camera_view"/>

    <SurfaceView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/camera_focus_view"/>

    <ProgressBar
        android:id="@+id/loadingSpinner"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_above="@+id/payeeKeyBtn"
        android:textColor="@color/timerText"
        android:gravity="center"
        android:textSize="15sp"
        android:background="@color/white"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:visibility="gone"
        android:text="@string/pay_using_mobile"
        android:id="@+id/payUsingMobileTextview" />

    <Button
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tryAgainBtn"
        android:background="@drawable/round_corner_button"
        android:textColor="@color/white"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/pay_using_key"
        android:onClick="payUsingPayeeKey"
        android:visibility="gone"
        android:id="@+id/payeeKeyBtn" />
    <Button
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:textColor="@color/popupBtn_pink"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:onClick="tryAgain"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/try_again"
        android:background="@drawable/button_border"
        android:visibility="gone"
        android:id="@+id/tryAgainBtn" />

</RelativeLayout>
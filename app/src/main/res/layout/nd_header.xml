<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navigation_header"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/group_bg"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/coloredBar"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/bitmap" />

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:text="Welcome"
        android:textColor="@color/welcome_text_color"
        android:textSize="@dimen/welcome_text_size"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="15dp"
        android:text="Mr. XYZ"
        android:textColor="#4a4a4a"
        android:textSize="@dimen/client_name_text_size"
        android:maxLines="2"
        android:ellipsize="end"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lastLoginTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:text="Last Login 01 Jan 2016 01:52"
        android:textColor="#4a4a4a"
        android:textSize="@dimen/group_text_size"
        android:textScaleX="1"/>
</LinearLayout>
        android:id="@+id/main_title"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/fingerprint_popup_icon"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginLeft="10"/>-->
    <ImageView
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:id="@+id/main_title"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/fingerprint_popup_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use fingerprint to Login"
        android:id="@+id/message_text"
        android:layout_below="@+id/main_title"
        android:layout_toRightOf="@+id/fp_image"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"
        android:textSize="18sp"
        android:textStyle="normal"
        android:textColor="@color/timerText"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OR"
        android:id="@+id/alternate_msg"
        android:layout_below="@+id/message_text"
        android:layout_toRightOf="@+id/fp_image"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/group_divider_color"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />


   <!-- <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:id="@+id/popup_divider"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/alternate_msg"
        android:background="@color/popupBtn_gray"
        android:gravity="center_horizontal"/>-->


    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="22dp"
        android:layout_marginTop="20dp"
        android:text="Use MPIN"
        android:id="@+id/mpin_btn"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/alternate_msg"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="@color/colorSecondaryText"
        android:background="@color/popupBtn_gray"
        style="?android:borderlessButtonStyle"
        />

</RelativeLayout>